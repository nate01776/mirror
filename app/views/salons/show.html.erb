<div class="row">
  <div class="small-12 large-12 large-centered medium-centered columns user-box">
    <div class="row">
      <h1><%=@salon.name %></h1>
    </div>
    <div class="row">
      <div class="small-4 columns salon-pic">
        <% if @salon.image.url != nil %>
          <%= image_tag @salon.image.url %>
        <% end %>
      </div>
        <div class="small-8 columns salon-info">
          <h3>
          address:<br>
          <b><%= @salon.address %>, <%= @salon.city %> <%= @salon.state %></b><br><br>
          phone:<br>
          <b><%= @salon.phone %></b><br><br>
          email:<br>
          <b><%= @salon.email %></b><br><br>
          </h3>
        </div>
    </div>
  </div>
</div>

<% if @user.user_type == "owner" && @is_owner %>
  <%= render 'owner' %>
<% elsif @user.user_type == "stylist" %>
  <%= render 'stylist' %>
<% else %>
  <%= render 'client' %>
<% end %>
