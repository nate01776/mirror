<div class="row">
<%= form_for(@salon) do |q| %>
  <div class="small-12 large-6 columns">
    <div class="field login-field">
      <%= q.label :name, "Name" %>
      <%= q.text_field :name %>
    </div>

    <div class="field login-field">
      <%= q.label :address, "Address" %>
      <%= q.text_field :address %>
    </div>

    <div class="field login-field">
      <%= q.label :city, "City" %>
      <%= q.text_field :city %>
    </div>

    <div class="field login-field">
      <%= q.label :state, "State" %>
      <%= q.text_field :state %>
    </div>

    <div class="field login-field">
      <%= q.label :zip_code, "Zip Code" %>
      <%= q.text_field :zip_code %>
    </div>
  </div>

  <div class="small-12 large-6 columns">
    <div class="field login-field">
      <%= q.label :email %>
      <%= q.text_field :email %>
    </div>

    <div class="field login-field">
      <%= q.label :phone %>
      <%= q.text_field :phone %>
    </div>

    <!-- <div class="field login-field">
      <%= q.label :image %>
      <%= q.file_field :image, id:"upload-here"%>
    </div> -->

    <div class="actions">
      <a href="/" class="button login-page-button"><</a>
      <input class="submit button new-salon-button"
        name="commit"
        type="submit"
        value="update location" />
    </div>
  </div>
<% end %>
</div>
