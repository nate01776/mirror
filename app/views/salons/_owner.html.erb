<div class="row large-centered user-box">
  <div class="small-12 large-6 columns user-noshadow-box">
    <div class="row">
      <h1>services</h1>
    </div>
    <div class="row clients">
      <ul class="user-profiles">
      <% @services.each do |service| %>
      <li>
        <div
        class="small-11 large-5 columns mini-profile" >
          <br />
          <i class="<%= service.icon %> fa-2x" aria-hidden="true"></i><br />
          <%= link_to service.name, salon_service_path(@salon.id, service.id) %><br />
          $<%= service.price %><br />
          est time: <%= service.time %><br />
          <%= link_to 'Delete this service', salon_service_path(@salon.id, service.id), { method: :delete } %>
        </div>
      </li>
      <% end %>
    </ul>
    </div>
    <%= link_to 'add new service', new_salon_service_path(params[:id]), class:"button new-salon-button" %>

  </div>

  <div class="small-12 large-6 columns user-noshadow-box">
    <div class="row">
      <h1>products</h1>
    </div>
    <div class="row">
      <ul class="user-profiles">
      <% @products.each do |product| %>
      <li>
        <div
        class="small-11 large-5 columns mini-profile" >
          <br />
          <i class="<%= product.icon %> fa-2x" aria-hidden="true"></i><br />
          <%= link_to product.name, salon_product_path(@salon.id, product.id) %><br />
          $<%= product.price %><br /><br />
          <%= product.description %><br />
          <%= link_to 'Delete this product', salon_product_path(@salon.id, product.id), { method: :delete } %>
        </div>
      </li>
      <% end %>
    </ul>
    </div>
    <%= link_to 'add new product', new_salon_product_path(params[:id]), class:"button new-salon-button" %>
  </div>
</div>
<div class="row large-centered user-box">
  <div class="small-12 large-6 columns user-noshadow-box">
    <div class="row">
      <h1>stylists</h1>
    </div>
    <div class="row clients">
      <ul class="user-profiles">
        <% @stylists.each do |stylist| %>
        <li>
          <div
          class="small-11 large-5 columns left mini-profile"
          style="background:
          linear-gradient(
            rgba(255, 255, 255, 0.5),
            rgba(255, 255, 255, 0.5)),
          <% if stylist.image.url != nil %>
            url(<%= stylist.image %>);
          <% else %>
            url(<%= stylist.default_image %>);
          <% end %>
          background-size: cover;
          background-position: center;" >
            <br />
            <% if stylist.image.url != nil %>
              <%= image_tag stylist.image.url, class:"mini-round-image" %><br />
            <% else %>
              <%= image_tag stylist.default_image, class:"mini-round-image" %><br />
            <% end %>
            <br />
            <%= link_to stylist.full_name, user_profile_path(@user.id, stylist.id), class:"button mini-profile-button" %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="small-12 large-6 columns user-noshadow-box">
    <div class="row">
      <h1>clients</h1>
    </div>
    <div class="row">
      <ul class="user-profiles">
        <% @clients.each do |client| %>
        <li>
          <div
          class="small-11 large-3 columns left mini-profile"
          style="background:
          linear-gradient(
            rgba(255, 255, 255, 0.5),
            rgba(255, 255, 255, 0.5)),
          <% if client.image.url != nil %>
            url(<%= client.image %>);
          <% else %>
            url(<%= client.default_image %>);
          <% end %>
          background-size: cover;
          background-position: center;" >
            <br />
            <% if client.image.url != nil %>
              <%= image_tag client.image.url, class:"mini-round-image" %><br />
            <% else %>
              <%= image_tag client.default_image, class:"mini-round-image" %><br />
            <% end %>
            <br />
            <%= link_to client.full_name, user_profile_path(@user.id, client.id), class:"button mini-profile-button" %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
