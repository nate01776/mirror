<div class="row large-centered salon-big-box">
  <div class="small-12 large-6 columns salon-box">
    <div class="row">
      <h1>services</h1>
    </div>
    <div class="row clients">
      <% @services.each do |service| %>
        <div class="row">
          <a href="/salons/<%= @salon.id %>/services/<%= service.id %>">
            <div class="small-12 columns service-info">
              <i class="<%= service.icon %>" aria-hidden="true"></i>
              <b><%= service.name %></b><br />
              - <%= service.description %><br />
            </div>
          </a>
        </div>
        <hr class="user-info-hr">
      <% end %>
    </div>
  </div>

  <div class="small-12 large-6 columns salon-box">
    <div class="row">
      <h1>stylists</h1>
    </div>
    <div class="row">
      <h3>some data</h3>
    </div>
  </div>
</div>
