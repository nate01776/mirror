<div class="row">
  <div class="small-12 large-6 large-centered columns user-box">
    <div class="row">
      <h1>log in</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field login-field">
        <%= f.label :email, "email", class:"login-title" %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field login-field">
        <br /><%= f.label :password, "password", class:"login-title" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <br />
      <div class="actions login-buttons">
        <a href="/" class="button new-salon-button"><</a>
        <input class="submit button new-salon-button"
          id="user_submit" name="commit"
          type="submit"
          value="log in" />
      </div>
    <% end %>

  </div>
</div>
