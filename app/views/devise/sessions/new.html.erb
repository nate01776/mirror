<div class="row">
  <div class="small-12 medium-8 large-6 large-centered medium-centered columns login-box">
    <div class="row">
      <h1>log in</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field login-field">
        <br /><%= f.label :email, "email", class:"login-title" %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field login-field">
        <br /><%= f.label :password, "password", class:"login-title" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="actions login-buttons">
        <%= f.submit "Log in", class:"login-page-button" %>
      </div>
    <% end %>
  </div>
</div>
